generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blog {
  id           String     @id @default(uuid())
  title        String
  subtitle     String
  writings     String
  coverImg     String
  blogImages   Images[]
  tags         String?
  thumbnailImg String?
  likes        Likes[]
  createdOn    DateTime   @default(now())
  updateAt     DateTime   @updatedAt
}

model Subscribers {
  id              String  @id @default(uuid())
  subscriberName  String?
  subscriberEmail String?
}

model Likes {
  id     String @id @default(uuid())
  blogId String
  blog   Blog   @relation(fields: [blogId], references: [id])
}

model Images {
  id     String @id @default(uuid())
  url    String
  blogId String
  blog   Blog   @relation(fields: [blogId], references: [id])
}
